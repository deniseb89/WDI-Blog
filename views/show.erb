<table>
	<tr>
		<td class="title">
			<%= @post.title %>
		</td>
	</tr>
	<tr>
		<td class="time">
			Written: <%= @post.created_at.strftime("%k:%M, %d %b %Y") %>
		</td>
	</tr>
	<tr>
		<td class="post">
			<%= @post.post %>
		</td>
	</tr>
</table>
	<a class="editpost" href="/entry/<%= @post.id %>/edit">
		Edit Post
	</a>
<form action="/entry/<%= @post.id %>" method="post">
	<input type="hidden" name="_method" value="delete">
	<input type="submit" value="Delete Post">
</form>